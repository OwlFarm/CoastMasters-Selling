
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to yachts and metadata for the app to function.
    // Deny all write access by default for security.
    match /yachts/{yachtId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /metadata/{docId} {
        allow read: if true;
        allow write: if false;
    }
  }
}

    