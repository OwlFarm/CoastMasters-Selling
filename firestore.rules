
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the yachts collection
    match /yachts/{yachtId} {
      allow read: if true;
      allow write: if false; // Keep writes restricted
    }

    // Deny all other reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
