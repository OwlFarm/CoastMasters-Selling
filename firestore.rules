rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for yacht listings
    match /yachts/{yachtId} {
      allow read: if true;
      allow write: if false;
    }

    // Allow public read access for metadata (filters, options, etc.)
    match /metadata/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
