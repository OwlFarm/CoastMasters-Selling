rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to yacht listings and metadata, which is safe for this app.
    // By default, write access is denied, which is a secure default.
    match /{document=**} {
      allow read: if true;
      allow write: if false; // Keep public writes disallowed.
    }
  }
}
