rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all documents in the yachts collection
    match /yachts/{document=**} {
      allow read: if true;
      allow write: if false; 
    }

    // Allow public read access to all documents in the metadata collection
    match /metadata/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
